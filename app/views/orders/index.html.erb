<p style="color: green"><%= notice %></p>

<h1>Alle offenen Bestellungen</h1>


<div id="orders">
  <% @orders.each do |order| %>
  <%if order.state == "placed" && order.created_at.day == Time.now.day %>
    <%= render order %>
    <p>
      <%= link_to "Bestellung Anzeigen", order %>
      <hr>
    </p>
    <% end %>
  <% end %>
</div>

